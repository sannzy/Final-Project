<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:gravity="center"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATA ANDA DI BIMBEL MATEMATIKA PAK RAJA"
        android:textSize="30dp"
        android:textColor="#FF003377"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Bimbel\t\t\t\t\t\t: "
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_idBimbel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID BIMBEL"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name\t\t\t\t\t\t\t\t\t\t: "
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email\t\t\t\t\t\t\t\t\t\t\t: "
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>



</LinearLayout>